generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String? @unique
  username String?
  password String?

  habits  Habit[]
  records Record[]

  refreshTokens     RefreshToken[]
  kakaoId           BigInt?        @unique
  kakaoAccessToken  String?
  kakaoRefreshToken String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RefreshToken {
  user User @relation(fields: [userId], references: [id])

  id     Int    @id @default(autoincrement())
  token  String @unique
  userId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum DayOfWeek {
  mon
  tue
  wed
  thu
  fri
  sat
  sun
}

enum RepeatType {
  daily
  weekly
}
model Habit {
  id     Int  @id @default(autoincrement())
  user   User @relation(fields: [userId], references: [id])
  userId Int

  name          String
  type          String  @default("none")
  description   String?
  archiveStatus Boolean @default(false)
  repeatType    RepeatType
  repeatDay     DayOfWeek[]
  noticeTime    DateTime[]
  themeColor    Int

  records Record[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Record {
  id     Int  @id @default(autoincrement())
  user   User @relation(fields: [userId], references: [id])
  userId Int

  habit Habit @relation(fields: [habitId], references: [id])
  habitId Int

  date String
  state String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
  